// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions     Session[]
  settings     UserSettings?
  monitoredAssets MonitoredAsset[]
  trades       Trade[]
  tradeHistory TradeHistory[]
}

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model UserSettings {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  interval        String   @default("15min")
  maxRisk         Float    @default(2.5)
  capital         Float    @default(150000)
  stopLoss        Float    @default(2.0)
  takeProfit      Float    @default(4.0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model MonitoredAsset {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol        String
  name          String
  lastPrice     Float
  changePercent Float
  trend         String   // "Alta" | "Baixa" | "Neutra"
  aiSignal      String   // "Comprar" | "Vender" | "Aguardar"
  status        String   // "Aberta" | "Encerrada"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([symbol])
}

model Trade {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol    String
  side      String   // "Compra" | "Venda"
  quantity  Float
  price     Float
  resultPct Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([symbol])
  @@index([timestamp])
}

model TradeHistory {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  timestamp       DateTime
  cumulativeReturn Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([timestamp])
}

